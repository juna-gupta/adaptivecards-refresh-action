{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Card Type",
              "horizontalAlignment": "left",
              "isSubtle": true,
              "color": "Accent",
              "size": "small",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${cardType}",
              "horizontalAlignment": "Left",
              "spacing": "None",
              "size": "Default",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Card Status",
              "horizontalAlignment": "right",
              "size": "small",
              "color": "Accent",
              "isSubtle": true,
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${cardStatus}",
              "horizontalAlignment": "Right",
              "spacing": "None",
              "size": "Default",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${message}",
      "wrap": true,
      "size": "Large",
      "weight": "Default",
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "Refresh Count: ${count}",
      "wrap": true,
      "size": "Large",
      "weight": "Default",
      "horizontalAlignment": "center"
    }
  ]
}